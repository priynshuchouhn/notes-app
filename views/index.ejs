
    <%- include('header.ejs') %>
    <div class="container-fluid d-flex justify-content-center">
      <div class="col-md-4 mt-5" id="notes-container">
        <div class="card">
          <div class="card-header">
            <h2>ToDos</h2>
          </div>
          <div class="card-body">
            <% let i = 0 %>
            <% if (locals.notes) { %>
                <% notes.forEach(note => { %>
                  <form action="/delete" method="post">
                  <div class="list_item my-2 py-2 d-flex align-items-center">
                      <div class="squaredTwo">
                        <input type="checkbox" class="checkbox" id="squaredTwo_<%= note._id %>" name="checkbox" value="<%= note._id %>" onchange="this.form.submit()" />
                        <label for="squaredTwo_<%= note._id %>"></label>
                      </div>
                      <label for="" class="ms-2"> <%= note.note %> </label>
                    </div>
                  </form>
                <% }) %>
              <% } %>              
          </div>
          <form action="/" method="post">
            <div class="card-footer d-flex justify-content-between">
              <input
                type="text"
                class="w-100"
                name="newItem"
                id="notes"
                placeholder="Add your notes"
              />
              <button type="submit">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="40"
                  height="40"
                  fill="#424874"
                  class="bi bi-plus"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"
                  />
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('footer.ejs') %>
  